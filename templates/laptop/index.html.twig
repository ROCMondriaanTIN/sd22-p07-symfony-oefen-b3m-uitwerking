{% extends 'base.html.twig' %}

{% block title %}Laptops!{% endblock %}

{% block body %}
    <h1>Een overzicht van alle laptops</h1>
    <table class="table table-hover table-striped">
        <thead>
        <tr>
            <th>Merk</th>
            <th>Prijs</th>
            <th>Bekijk</th>
        </tr>
        </thead>
        <tbody>
        {%  for laptop in laptops %}
            <tr>
                <td>{{ laptop.brand }}</td>
                <td>{{ laptop.price }}</td>
                <td><a href="{{ path('app_laptop_detaill', {'id': laptop.id}) }}"><button type="button" class="btn btn-outline-primary">Toon laptop</button></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
{% endblock %}
