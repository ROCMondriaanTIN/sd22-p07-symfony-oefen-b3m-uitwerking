{% extends 'base.html.twig' %}

{% block title %}Hello ScheduleController!{% endblock %}

{% block body %}
    {{ currentMonth }}
    {{ currentYear }}
    {{ numberOfDaysInMonth }}

    <table class="table table-hover table-striped">
        <thead>
        <tr>
            <th>Datum</th>
        </tr>
        </thead>
        <tbody>
        {%  for day in dayArray %}
            <tr>
                <td>{{ day }}</td>

            </tr>
            {%  for appointment in appointments %}
                {% if  appointment.startDate|date('Y-m-d') == day %}
                    <tr>
                        <td>{{ appointment.title }} {{ appointment.startDate|date('Y-m-d')  }}</td>
                    </tr>
                {% endif %}
            {% endfor %}
        {% endfor %}
        </tbody>
    </table>



{% endblock %}
